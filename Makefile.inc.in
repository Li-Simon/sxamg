NLIB            = sxamg
LIB_SUFFIX      = .a

CPP	            = @CPP@
CPPFLAGS        = @CPPFLAGS@

CC              = @CC@
CFLAGS          = @CFLAGS@

CXX             = @CXX@
CXXFLAGS        = @CXXFLAGS@

FC              = @FC@
FCFLAGS         = @FCFLAGS@
FCLIBS          = @FCLIBS@

LINKER          = @LINKER@
LDFLAGS         = @LDFLAGS@
LIBS            = @LIBS@

AR              = @AR@
RANLIB          = @RANLIB@

prefix		= @prefix@
libdir      = @prefix@/lib
includedir  = @prefix@/include
RPATH_FLAG	= @RPATH_FLAG@

.c.o:
	${CC} ${CFLAGS} ${CPPFLAGS} -c $*.c
	@echo

.cxx.o:
	${CXX} ${CXXFLAGS} ${CPPFLAGS} -c $*.cxx
	@echo

.f.o:
	${FC} ${FCFLAGS} -c $*.f
	@echo

% : %.c
	${CC} ${CFLAGS} ${CPPFLAGS} -c $*.c
	${LINKER} ${LDFLAGS} -o $@ $*.o ${LIBS}
	@echo

% : %.cxx
	${CXX} ${CXXFLAGS} ${CPPFLAGS} -c $*.cxx
	${CXX} ${LDFLAGS} -o $@ $*.o ${LIBS}
	@echo

% : %.o
	${LINKER} ${LDFLAGS} -o $@ $*.o ${LIBS}
	@echo

